{
  "name": "webdriverio-automation",
  "version": "1.0.0",
  "description": "Automation framework to test web application,API and mobile app",
  "main": "index.js",
  "scripts": {
    "test": "wdio wdio.conf.js --reporters allure",
    "windowHandle": "set HEADLESS=Y && npx wdio wdio.conf.ts --cucumberOpts.tagExpression='@window_handles'",
    "dev:hrmsLogin": "set HEADLESS=N && npx wdio ./config/enviroments-config.ts --cucumberOpts.tagExpression='@hrms'",
    "dev:productStore": "set HEADLESS=Y && set DEBUG=Y && npx wdio ./config/enviroments-config.ts --cucumberOpts.tagExpression='@product_store'",
    "E2ETest": "set HEADLESS=N && npx wdio wdio.conf.ts --cucumberOpts.tagExpression='@e2e'",
    "api_test_e2e": "set HEADLESS=N && npx wdio wdio.conf.ts --cucumberOpts.tagExpression='@api'",
    "mobile_e2e": "set HEADLESS=N && npx wdio ./config/mobile-config.ts --cucumberOpts.tagExpression='@mobile'",
    "reports": "allure generate allure-results --clean  && allure open"
  },
  "keywords": [
    "wdio",
    "cucumber",
    "e2e",
    "tests"
  ],
  "author": "Vikas",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.4.0",
    "@playwright/test": "^1.24.1",
    "@sendgrid/mail": "^7.7.0",
    "@types/chai": "^4.3.1",
    "@types/jquery": "^3.5.29",
    "@types/node": "^20.12.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/types": "^7.6.0",
    "@wdio/allure-reporter": "^7.20.3",
    "@wdio/appium-service": "^8.35.1",
    "@wdio/cli": "^7.20.5",
    "@wdio/cucumber-framework": "^7.20.3",
    "@wdio/globals": "^8.33.1",
    "@wdio/junit-reporter": "7",
    "@wdio/local-runner": "^7.20.5",
    "@wdio/spec-reporter": "^7.20.3",
    "@wdio/utils": "^8.35.0",
    "allure-playwright": "^2.0.0-beta.18",
    "app-root-path": "^3.0.0",
    "appium": "^2.5.1",
    "appium-uiautomator2-driver": "^3.0.6",
    "chai": "^4.3.6",
    "chromedriver": "^123.0.1",
    "csv-parse": "^5.5.5",
    "dotenv": "^16.0.1",
    "geckodriver": "^3.0.2",
    "get-stream": "^6.0.1",
    "i": "^0.3.7",
    "mailosaur": "^8.4.0",
    "nodemailer": "^6.7.7",
    "npm": "^10.5.0",
    "parse": "^4.3.1",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "wdio-chromedriver-service": "^7.3.2",
    "wdio-geckodriver-service": "^2.1.2",
    "winston": "^3.12.0",
    "xlsx": "^0.18.5"
  }
}
