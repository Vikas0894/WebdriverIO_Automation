{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/cucumber-framework",
      "expect-webdriverio",
      "@wdio/appium-service",
      "@wdio/globals/types"
    ]
  },
  "include": [
    "./src/**/*.ts", 
    "src/helper/sendEmailNotification.js",
    "./custom-types.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
